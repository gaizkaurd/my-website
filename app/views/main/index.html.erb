<div class="flex flex-col sm:flex-row sm:items-center mb-8">
  <%= tag.h1 t('home') , class: "dark:text-white uppercase tracking-wider font-semibold flex-auto" %>
</div>
<div class="text-center">
  <%= render Readme::Component.new username: Rails.application.config.x.github.username , readme_html: Rails.application.config.x.github.readme %>
</div>
<div class="text-center mt-4 flex flex-row flex-wrap place-content-center gap-5">
  <div class="flex-auto bg-slate-50 dark:bg-gray-600 rounded-lg p-4 transform hover:translate-y-1 transition duration-300">
    <h2 class="dark:text-white text-3xl font-semibold"><%= t('my_repositories') %></h2>
    <% if !Rails.application.config.x.github.repositories.is_a? String %>
      <%= render Repository::Component.with_collection(Rails.application.config.x.github.repositories) %>
    <% else %>
      <p> <%= t('error')%> </p>
    <% end %>
  </div>
  <div class="flex-auto bg-slate-50 dark:bg-gray-600 rounded-lg transform hover:translate-y-1 transition duration-300">
    <div class="p-4 flex gap-3 items-center">
      <h2 class="dark:text-white text-3xl font-semibold"><%= t('last_activity') %></h2>
      <svg class="w-6 h-6" fill="currentColor" viewbox="0 0 24 24">
        <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12">
        </path>
      </svg>
    </div>
    <% if !Rails.application.config.x.github.activity.is_a? String %>
      <%= render Activity::Component.with_collection(Rails.application.config.x.github.activity) %>
    <% else %>
      <p> <%= t('error')%> </p>
    <% end %>
  </div>
  <div class="bg-slate-50 dark:bg-gray-600 rounded-lg p-1 transform hover:translate-y-1 transition duration-300 w-full">
  <h3 class="dark:text-white text-3xl font-semibold"><%= t('my_proyects')%></h3>
  <div class="flex flex-wrap place-content-center p-3 gap-4">
    <%= render ProjectCard::Component.with_collection(@projects)%>
  </div>
</div>

